<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/light_gray">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        android:padding="0.5dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_portrait"
            android:layout_width="@dimen/portrait_size"
            android:layout_height="@dimen/portrait_size"
            fresco:placeholderImage="@drawable/temp_portrait"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:paddingLeft="@dimen/my_info_padding"
        android:paddingRight="@dimen/my_info_padding"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/my_info_size"
            android:text="账号"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <TextView
                android:id="@+id/my_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/my_info_size"
                android:textColor="@color/black"
                android:text="S123456"/>
            <TextView
                android:id="@+id/alter_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="@dimen/small_text"
                android:textColor="@color/gray_6"
                android:text="修改密码>"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/my_info_margin_each"
        android:paddingLeft="@dimen/my_info_padding"
        android:paddingRight="@dimen/my_info_padding"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/my_info_size"
            android:text="姓名"/>
        <TextView
            android:id="@+id/my_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/my_info_size"
            android:textColor="@color/black"
            android:text="樱木花道"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/my_info_margin_each"
        android:paddingLeft="@dimen/my_info_padding"
        android:paddingRight="@dimen/my_info_padding"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/my_info_size"
            android:text="部门"/>
        <TextView
            android:id="@+id/my_dept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/my_info_size"
            android:textColor="@color/black"
            android:text="技术部"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/my_info_margin_each"
        android:paddingLeft="@dimen/my_info_padding"
        android:paddingRight="@dimen/my_info_padding"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/my_info_size"
            android:text="职位"/>
        <TextView
            android:id="@+id/my_position"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/my_info_size"
            android:textColor="@color/black"
            android:text="主任"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/my_info_margin_each"
        android:paddingLeft="@dimen/my_info_padding"
        android:paddingRight="@dimen/my_info_padding"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/my_info_size"
            android:text="手机"/>
        <TextView
            android:id="@+id/my_cellphone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/my_info_size"
            android:textColor="@color/black"
            android:text="13480987994"/>
    </LinearLayout>

    <TextView
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="@dimen/my_info_padding"
        android:layout_marginRight="@dimen/my_info_padding"
        android:gravity="center"
        android:background="@drawable/shape_bg_red"
        android:padding="6dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="退  出"/>

</LinearLayout>
