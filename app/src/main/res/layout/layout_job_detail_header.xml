<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:id="@+id/type_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/job_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="[公文]"
            android:textColor="@color/red_bg"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/job_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="处理中"
            android:textSize="14sp"
            android:textColor="@color/job_done"/>
        <View
            android:id="@+id/job_status_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_doing"/>
    </LinearLayout>
    <TextView
        android:id="@+id/job_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type_bar"
        android:layout_marginTop="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="@string/long_title_demo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job_title"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="8dp"
        android:layout_marginTop="3dp"
        android:gravity="top">
        <TextView
            android:id="@+id/total_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:textSize="@dimen/small_text"
            android:textColor="#d62"
            android:visibility="gone"
            android:text="@string/long_title_demo"
            tools:visibility="visible"
            />

    </LinearLayout>
</RelativeLayout>